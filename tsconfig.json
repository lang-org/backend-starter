{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "target": "es5",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@types": ["types"],
      "@generated/*": ["generated/*"]
    }
  },
  "exclude": ["src/tests/**dist", "node_modules", "dist"]
}
